    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Roboto', sans-serif;
        }

        body {
            background-color: #e9ecef;
            color: #2d3748;
        }

        .header {
            background-color: #003087;
            color: white;
            padding: 20px 30px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .logo {
            height: 60px;
        }

        .container {
            max-width: 900px;
            margin: 40px auto;
            padding: 30px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 6px 12px rgba(0,0,0,0.1);
        }

        h1 {
            color: #003087;
            margin-bottom: 30px;
            text-align: center;
            font-size: 28px;
            font-weight: 700;
        }

        .valor-emenda {
            margin-bottom: 40px;
        }

        .input-group {
            margin-bottom: 25px;
            position: relative;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: 500;
            color: #003087;
            font-size: 16px;
        }

        .input-icon {
            position: relative;
        }

        .input-icon i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #6b7280;
            font-size: 18px;
        }

        .input-icon input {
            width: 100%;
            padding: 12px 12px 12px 40px;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.3s, box-shadow 0.3s;
        }

        .input-icon input:focus {
            outline: none;
            border-color: #003087;
            box-shadow: 0 0 0 3px rgba(0,48,135,0.1);
        }

        .error-message {
            color: #dc2626;
            font-size: 14px;
            margin-top: 5px;
            display: none;
        }

        .btn {
            background-color: #003087;
            color: white;
            border: none;
            padding: 14px 24px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 500;
            width: 100%;
            transition: background-color 0.3s, transform 0.2s;
        }

        .btn:hover {
            background-color: #00205b;
            transform: translateY(-2px);
        }

        .btn:active {
            transform: translateY(0);
        }

        .resumo-valores {
            background-color: #f8fafc;
            padding: 20px;
            border-radius: 8px;
            margin-top: 30px;
            border-left: 5px solid #003087;
        }

        .resumo-valores p {
            margin-bottom: 12px;
            display: flex;
            justify-content: space-between;
            font-size: 16px;
        }

        .resumo-valores strong {
            color: #003087;
            font-weight: 500;
        }

        .footer {
            text-align: center;
            margin-top: 40px;
            padding: 20px;
            color: #6b7280;
            font-size: 14px;
        }

        .loading {
            display: none;
            color: #003087;
            font-size: 14px;
            margin-top: 5px;
        }

        .loading i {
            margin-right: 5px;
            animation: spin 1s linear infinite;
        }

        .api-error {
            color: #dc2626;
            font-size: 14px;
            margin-top: 5px;
            display: none;
        }

        .api-warning {
            color: #d97706;
            font-size: 14px;
            margin-top: 5px;
            display: none;
        }

        .cnpj-valid {
            color: #16a34a;
            font-size: 14px;
            margin-top: 5px;
            display: none;
        }

        .api-option {
            margin-top: 10px;
            display: flex;
            align-items: center;
        }

        .api-option input[type="checkbox"] {
            margin-right: 8px;
        }

        .api-option label {
            margin-bottom: 0;
            font-weight: normal;
            color: #4b5563;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        @media (max-width: 768px) {
            .container {
                margin: 20px;
                padding: 20px;
            }

            .header {
                padding: 15px 20px;
            }

            .logo {
                height: 50px;
            }
        }

        @media (max-width: 480px) {
            h1 {
                font-size: 24px;
            }

            .btn {
                padding: 12px 20px;
            }
        }
    </style>
</head>
<body>
    <header class="header" role="banner">
        <img src="/images/ASSINATURAS_ESPORTE__PRINCIPAL.png" alt="Ministério do Esporte" class="logo">
        <h2>Sistema de Precificação de Emendas</h2>
    </header>

    <main class="container" role="main">
        <h1>Precificação de Emendas Parlamentares</h1>
        
        <section class="valor-emenda">
            <div class="input-group">
                <label for="numero-proposta">N° da Proposta</label>
                <div class="input-icon">
                    <i class="fas fa-file-alt"></i>
                    <input type="text" id="numero-proposta" placeholder="Digite o número da proposta" aria-describedby="numero-proposta-error">
                </div>
                <span id="numero-proposta-error" class="error-message">Por favor, insira um número de proposta válido (mínimo 3 caracteres).</span>
            </div>

            <div class="input-group">
                <label for="cnpj">CNPJ da Entidade</label>
                <div class="input-icon">
                    <i class="fas fa-building"></i>
                    <input type="text" id="cnpj" placeholder="00.000.000/0000-00" inputmode="numeric" aria-describedby="cnpj-error">
                </div>
                <span id="cnpj-error" class="error-message">Por favor, insira um CNPJ válido.</span>
                <span id="cnpj-valid" class="cnpj-valid">
                    <i class="fas fa-check-circle"></i> CNPJ válido
                </span>
                <div class="api-option">
                    <input type="checkbox" id="usar-api" checked>
                    <label for="usar-api">Consultar dados da empresa automaticamente</label>
                </div>
                <div id="loading-cnpj" class="loading">
                    <i class="fas fa-spinner"></i> Consultando dados da empresa...
                </div>
                <div id="api-error" class="api-error">
                    <i class="fas fa-exclamation-triangle"></i> Não foi possível consultar os dados. Preencha manualmente.
                </div>
                <div id="api-warning" class="api-warning">
                    <i class="fas fa-exclamation-circle"></i> <span id="api-message"></span>
                </div>
            </div>

            <div class="input-group">
                <label for="nome-entidade">Nome da Entidade</label>
                <div class="input-icon">
                    <i class="fas fa-university"></i>
                    <input type="text" id="nome-entidade" placeholder="Digite o nome da entidade" aria-describedby="nome-entidade-error">
                </div>
                <span id="nome-entidade-error" class="error-message">Por favor, insira o nome da entidade (mínimo 3 caracteres).</span>
            </div>

            <div class="input-group">
                <label for="valor-total">Valor Total da Emenda</label>
                <div class="input-icon">
                    <i class="fas fa-dollar-sign"></i>
                    <input type="text" id="valor-total" placeholder="0,00" inputmode="numeric" aria-describedby="valor-total-error">
                </div>
                <span id="valor-total-error" class="error-message">Por favor, insira um valor válido para a emenda.</span>
            </div>

            <div class="resumo-valores">
                <p>
                    <span>Valor Total da Emenda:</span>
                    <strong id="display-valor-total">R$ 0,00</strong>
                </p>
                <p>
                    <span>Valor Gasto:</span>
                    <strong id="display-valor-gasto">R$ 0,00</strong>
                </p>
                <p>
                    <span>Valor Restante:</span>
                    <strong id="display-valor-restante">R$ 0,00</strong>
                </p>
            </div>

            <button class="btn" id="btn-continuar">Continuar para Precificação</button>
        </section>
    </main>

    <footer class="footer" role="contentinfo">
        © 2025 Ministério do Esporte - Todos os direitos reservados
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Configuração da API
            const API_URL = window.location.hostname === 'localhost' 
                ? 'http://localhost:3000' 
                : window.location.origin;

            // Elementos do formulário
            const numeroPropostaInput = document.getElementById('numero-proposta');
            const cnpjInput = document.getElementById('cnpj');
            const nomeEntidadeInput = document.getElementById('nome-entidade');
            const valorTotalInput = document.getElementById('valor-total');
            const displayValorTotal = document.getElementById('display-valor-total');
            const btnContinuar = document.getElementById('btn-continuar');
            const usarApiCheckbox = document.getElementById('usar-api');
            const apiMessage = document.getElementById('api-message');

            // Elementos de mensagem
            const numeroPropostaError = document.getElementById('numero-proposta-error');
            const cnpjError = document.getElementById('cnpj-error');
            const cnpjValid = document.getElementById('cnpj-valid');
            const nomeEntidadeError = document.getElementById('nome-entidade-error');
            const valorTotalError = document.getElementById('valor-total-error');
            const loadingCnpj = document.getElementById('loading-cnpj');
            const apiError = document.getElementById('api-error');
            const apiWarning = document.getElementById('api-warning');

            // Formatação do CNPJ
            cnpjInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                
                if (value.length > 2) {
                    value = value.substring(0, 2) + '.' + value.substring(2);
                }
                if (value.length > 6) {
                    value = value.substring(0, 6) + '.' + value.substring(6);
                }
                if (value.length > 10) {
                    value = value.substring(0, 10) + '/' + value.substring(10);
                }
                if (value.length > 15) {
                    value = value.substring(0, 15) + '-' + value.substring(15);
                }
                
                e.target.value = value.substring(0, 18);
                cnpjError.style.display = 'none';
                cnpjValid.style.display = 'none';
                apiError.style.display = 'none';
                apiWarning.style.display = 'none';
            });

            // Validação em tempo real do CNPJ
            cnpjInput.addEventListener('input', function() {
                const cnpj = cnpjInput.value;
                if (cnpj.length === 18 && validarCNPJ(cnpj)) {
                    cnpjError.style.display = 'none';
                    cnpjValid.style.display = 'block';
                } else {
                    cnpjValid.style.display = 'none';
                }
            });

            // Busca automática ao sair do campo CNPJ
            cnpjInput.addEventListener('blur', async function() {
                const cnpj = cnpjInput.value.replace(/\D/g, '');
                
                if (cnpj.length === 14 && validarCNPJ(cnpjInput.value)) {
                    cnpjError.style.display = 'none';
                    cnpjValid.style.display = 'block';
                    
                    if (usarApiCheckbox.checked) {
                        await consultarCNPJ(cnpj);
                    }
                } else if (cnpj.length > 0) {
                    cnpjError.style.display = 'block';
                    cnpjValid.style.display = 'none';
                }
            });

            // Função para consultar CNPJ via backend
            async function consultarCNPJ(cnpj) {
                const cacheKey = `cnpj_${cnpj}`;
                const cachedData = localStorage.getItem(cacheKey);
                if (cachedData) {
                    const data = JSON.parse(cachedData);
                    if (data.nome || data.fantasia) {
                    nomeEntidadeInput.value = data.nome || data.fantasia;
                    nomeEntidadeError.style.display = 'none';
                    }
                    return;
                }

                loadingCnpj.style.display = 'block';
                nomeEntidadeInput.disabled = true;
                apiError.style.display = 'none';
                apiWarning.style.display = 'none';

                try {
                    const response = await fetch(`${API_URL}/api/consulta-cnpj/${cnpj}`);
                    
                    const contentType = response.headers.get('content-type');
                    if (!response.ok) {
                    if (contentType && contentType.includes('application/json')) {
                        const errorData = await response.json();
                        throw new Error(errorData.error || `Erro ${response.status}: ${response.statusText}`);
                    } else {
                        throw new Error(`Erro ${response.status}: Resposta não é JSON`);
                    }
                    }

                    if (!contentType || !contentType.includes('application/json')) {
                    throw new Error('Resposta inválida: não é JSON');
                    }

                    const data = await response.json();

                    if (!data.success) {
                    throw new Error(data.error || 'Dados da empresa não encontrados');
                    }

                    if (data.nome || data.fantasia) {
                    nomeEntidadeInput.value = data.nome || data.fantasia;
                    nomeEntidadeError.style.display = 'none';
                    localStorage.setItem(cacheKey, JSON.stringify(data));
                    } else {
                    throw new Error('Dados da empresa não encontrados');
                    }
                } catch (error) {
                    console.error('Erro na consulta:', error);
                    apiMessage.textContent = error.message;
                    apiWarning.style.display = 'block';
                } finally {
                    loadingCnpj.style.display = 'none';
                    nomeEntidadeInput.disabled = false;
                }
                }

            // Validação em tempo real do nome da entidade
            nomeEntidadeInput.addEventListener('input', function() {
                if (nomeEntidadeInput.value.trim().length >= 3) {
                    nomeEntidadeError.style.display = 'none';
                } else {
                    nomeEntidadeError.style.display = 'block';
                }
            });

            // Formatação monetária
            valorTotalInput.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                value = (value / 100).toLocaleString('pt-BR', {
                    minimumFractionDigits: 2,
                    maximumFractionDigits: 2
                });
                e.target.value = value;
                displayValorTotal.textContent = `R$ ${value}`;
                document.getElementById('display-valor-restante').textContent = `R$ ${value}`;
                valorTotalError.style.display = 'none';
            });

            // Validação em tempo real do número da proposta
            numeroPropostaInput.addEventListener('input', function() {
                if (numeroPropostaInput.value.trim().length >= 3) {
                    numeroPropostaError.style.display = 'none';
                } else {
                    numeroPropostaError.style.display = 'block';
                }
            });

            // Validação e redirecionamento
            btnContinuar.addEventListener('click', function() {
                const numeroProposta = numeroPropostaInput.value.trim();
                const cnpj = cnpjInput.value.trim();
                const nomeEntidade = nomeEntidadeInput.value.trim();
                const valor = valorTotalInput.value.replace(/[^\d,]/g, '').replace(',', '.');
                const valorNumerico = parseFloat(valor);

                let hasError = false;

                // Validação do número da proposta
                if (numeroProposta.length < 3) {
                    numeroPropostaError.style.display = 'block';
                    hasError = true;
                } else {
                    numeroPropostaError.style.display = 'none';
                }

                // Validação do CNPJ
                if (cnpj.length !== 18 || !validarCNPJ(cnpj)) {
                    cnpjError.style.display = 'block';
                    cnpjValid.style.display = 'none';
                    hasError = true;
                } else {
                    cnpjError.style.display = 'none';
                    cnpjValid.style.display = 'block';
                }

                // Validação do nome da entidade
                if (nomeEntidade.length < 3) {
                    nomeEntidadeError.style.display = 'block';
                    hasError = true;
                } else {
                    nomeEntidadeError.style.display = 'none';
                }

                // Validação do valor da emenda
                if (isNaN(valorNumerico) || valorNumerico <= 0) {
                    valorTotalError.style.display = 'block';
                    hasError = true;
                } else {
                    valorTotalError.style.display = 'none';
                }

                if (hasError) return;

                // Armazena os valores na sessionStorage para usar na próxima página
                sessionStorage.setItem('numeroProposta', numeroProposta);
                sessionStorage.setItem('cnpj', cnpj);
                sessionStorage.setItem('nomeEntidade', nomeEntidade);
                sessionStorage.setItem('valorEmenda', valorNumerico);
                
                // Redireciona para a página de precificação
                window.location.href = 'precificacao';
            });

            // Função para validar CNPJ
            function validarCNPJ(cnpj) {
                cnpj = cnpj.replace(/[^\d]+/g,'');
                
                if(cnpj == '') return false;
                if (cnpj.length != 14) return false;
                
                // Elimina CNPJs inválidos conhecidos
                const invalidos = [
                    "00000000000000", "11111111111111", "22222222222222",
                    "33333333333333", "44444444444444", "55555555555555",
                    "66666666666666", "77777777777777", "88888888888888", 
                    "99999999999999"
                ];
                
                if (invalidos.includes(cnpj)) return false;
                    
                // Valida DVs
                let tamanho = cnpj.length - 2;
                let numeros = cnpj.substring(0,tamanho);
                let digitos = cnpj.substring(tamanho);
                let soma = 0;
                let pos = tamanho - 7;
                
                for (let i = tamanho; i >= 1; i--) {
                    soma += numeros.charAt(tamanho - i) * pos--;
                    if (pos < 2) pos = 9;
                }
                
                let resultado = soma % 11 < 2 ? 0 : 11 - soma % 11;
                if (resultado != digitos.charAt(0)) return false;
                    
                tamanho = tamanho + 1;
                numeros = cnpj.substring(0,tamanho);
                soma = 0;
                pos = tamanho - 7;
                
                for (let i = tamanho; i >= 1; i--) {
                    soma += numeros.charAt(tamanho - i) * pos--;
                    if (pos < 2) pos = 9;
                }
                
                resultado = soma % 11 < 2 ? 0 : 11 - soma % 11;
                if (resultado != digitos.charAt(1)) return false;
                    
                return true;
            }
        });
    </script>
</body>
